<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hseday">

    <application
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/crow_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutFacultyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutOrganisationActivity"
            android:label="@string/title_activity_about_organisation"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".DialogFragments.ActivityLection"
            android:label="ActivityLection"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".DialogFragments.ActivityTent"></activity>
    </application>

</manifest>