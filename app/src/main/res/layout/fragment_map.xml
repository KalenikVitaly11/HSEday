<?xml version="1.0" encoding="utf-8"?>
<com.scrollable.view.VScroll
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vScroll"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <com.scrollable.view.HScroll
        android:id="@+id/hScroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:fillViewport="true">

            <ImageView
                android:id="@+id/map_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center" />

            <ImageView
                android:id="@+id/map_microphone_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="500dp"
                android:layout_marginTop="300dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/map_microphone" />

            <ImageView
                android:id="@+id/map_ball_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/map_ball" />

            <ImageView
                android:id="@+id/map_quest_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="400dp"
                android:layout_marginTop="350dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/map_quest" />

            <ImageView
                android:id="@+id/map_tent_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="700dp"
                android:layout_marginTop="200dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/map_tent" />


        </RelativeLayout>
    </com.scrollable.view.HScroll>
</com.scrollable.view.VScroll>