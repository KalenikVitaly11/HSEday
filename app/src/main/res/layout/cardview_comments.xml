<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    android:animateLayoutChanges="true"
    android:clickable="false"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/comments_user_avatar"
            android:src="@drawable/pushkin"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comments_user_name"
            android:text="Имя Фамилия"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_alignTop="@+id/comments_user_avatar"
            android:layout_toEndOf="@+id/comments_user_avatar"
            android:layout_marginBottom="13dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comments_user_comment"
            android:text="КомментарийКомментарийКомментарийКомментарийКомментарийКомментарийКомментарийКомментарийКомментарийКомментарийКомментарийКомментарийКомментарийКомментарийКомментарийКомментарий"
            android:textColor="@android:color/black"
            android:layout_below="@+id/comments_user_avatar"
            android:layout_alignParentStart="true"
            android:textSize="16sp" />

        <TextView
            android:text="12:05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comments_time"
            android:layout_alignBottom="@+id/comments_user_avatar"
            android:layout_alignStart="@+id/comments_user_name"
            android:layout_marginBottom="16dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
